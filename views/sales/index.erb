<table id="sales_table">
  <caption>Sales</caption>
  <thead>
    <tr>
      <th>Album Title</th>
      <th>Artist</th>
      <th>Buy Price</th>
      <th>Sell Price</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= Album.find(sale.album_id).title %></td>
        <td><%= Album.find(sale.album_id).artist_id %></td>
        <td><%= sale.buy_price %></td>
        <td><%= sale.sell_price %></td>
      </tr>
    <% end %>
  </tbody>

</table>
