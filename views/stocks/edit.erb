<form class="add_form" method="post" action="/stocks/<%= @stock.id %>">


  <label for="quantity-field">Quantity:</label>
  <input type="number" name="quantity" id="quantity-field" value="<%= @stock.quantity %>">
  <br>

  <label for="buy-price-field">Buy Price:</label>
  <input type="number" step="0.01" name="buy_price" id="buy-price-field" value="<%= '%.2f' %@stock.buy_price %>">
  <br>

  <label for="sell-price-field">Sell Price:</label>
  <input type="number" step="0.01" name="sell_price" id="sell-price-field" value="<%= '%.2f' %@stock.sell_price %>">
  <br>

  <input type="hidden" name="album_id" id="album-id-field" value="<%= @stock.album_id %>">

  <input class="btn" type="submit" value="Update Stock">

</form>
