

<table id="album_table">
  <caption>Albums</caption>
  <thead>
    <tr>
      <th>Album Title</th>
      <th>Artist</th>
      <th>Format</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.artist.name %></td>
        <td><%= album.format %></td>
        <td><%= album.stock.quantity %></td>
        <p><a id="album_table" href="/albums/<%= album.id %>/edit">Update Album.</a></p>

        <!-- <p><button type="submit" href="/albums/<%= album.id %>/edit" >Edit Album Details<%= album.id %></button></p> -->
      </tr>
    <% end %>
  </tbody>

</table>
