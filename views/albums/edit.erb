<form method="post" action="/albums/<%= @album.id %>">
  <label for="title">Title:</label>
  <input
  type="text"
  name="title"
  id="title"
  value="<%= @album.title %>"
  />

  <label for="artist">Artist: <%= @album.artist.name %></label>

  <label for="format">Format:</label>
  <select name="format" id="format">

    <option
    value="<%= @album.format %>"
    <%= "selected" if @album.format == "vinyl" %>
    >Vinyl</option>

    <option
    value="<%= @album.format %>"
    <%= "selected" if @album.format == "CD" %>
    >CD</option>

  </select>

  <label for="thumb_url_input">Image URL:</label>
  <input
  type="text"
  name="thumb_url"
  id="thumb_url_input"
  value="<%= @album.thumb_url %>"
  />

  <input type='submit' value="Edit Album">
</form>
